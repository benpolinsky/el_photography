<% breadcrumb :admin_photos %>
<p id="notice"><%= notice %></p>

<h1>Photos</h1>


<div id="admin-search-form">
  <%= search_form_for [:admin, @q], class: "form-horizontal" do |f| %>
    
    <div class="form-group search-container">
      <%= f.label :caption_cont, "Caption: " %>
      <%= f.search_field :caption_cont, class: "form-control" %>
    </div>
    
    <div class="form-group">    
      <%= f.submit "Search", class: "btn btn-secondary" %>
     </div>
  <% end %>
  <br><br>
</div>

<table class='table sortable'>
  <thead>
    <tr>
      <th>move</th>
      <th>Image</th>
      <th>Caption</th>
      <th>Tags</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @photos.each do |photo| %>
      <%= content_tag :tr, class: "row-item", data: {item_id: photo.id, post_path: url_for([:update_row_order, :admin, :photos])} do %>
        <td scope='row' class='handle'>&equiv;</td>
        <td><%= image_tag photo.image.url(:thumb) %></td>
        <td><%= best_in_place [:admin, photo], :caption, as: :input %></td>
        <td>
          <%= form_for [:admin, photo], html: {data: {remote: true}, class: "patience"} do |f| %>
            <select name="photo[tag_list][]" class="taggable" multiple="true">
              <% Tag.all.each do |tag| %>
                <%= content_tag :option, value: tag.name, selected: tag_selected?(photo, tag) do %>
                  <%= tag.name %>
                <% end %>
              <% end %>
            </select>  
            <%= f.submit 'update tags', class: "btn btn-sm btn-secondary" %>          
          <% end %>
        </td>
        <td>
          <div class='btn-group'>
            <%= link_to 'Edit', edit_admin_photo_path(photo), class: "btn btn-xs btn-secondary" %>
            <%= link_to 'Destroy', [:admin, photo], method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-xs btn-secondary" %>
          </div>
          <%= link_to "Create Print", create_from_photo_admin_products_path(photo), method: :post, class: "btn btn-xs btn-secondary btn-bottom" %>
        </td>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Add Photos', add_admin_photos_path, class: "btn btn-primary" %>
<div class="pagination">
  <%= paginate @photos %>
</div>