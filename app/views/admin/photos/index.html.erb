<table class='table sortable'>
  <thead>
    <tr>
      <th>move</th>
      <th>Image</th>
      <th>Caption</th>
      <th>Tags</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @photos.each do |photo| %>
      <%= content_tag :tr, class: "row-item", data: {item_id: photo.id, post_path: url_for([:update_row_order, :admin, :photos])} do %>
        <td scope='row' class='handle'>&equiv;</td>
        <td><%= image_tag photo.image.url(:thumb) %></td>
        <td><%= best_in_place [:admin, photo], :caption, as: :input %></td>
        <td>

            <select name="photo[tag_list][]" class="taggable" multiple="true" data-id="<%= photo.id %>" data-update-url="<%= admin_photo_path(photo.id) %>">
              <%= content_tag :option, value: '', selected: 'true' %>
              <% Tag.all.each do |tag| %>
                <%= content_tag :option, value: tag.name, selected: tag_selected?(photo, tag) do %>
                  <%= tag.name %>
                <% end %>
              <% end %>
            </select>  


        </td>
        <td>
          <div class='btn-group'>
            <%= link_to 'Edit', edit_admin_photo_path(photo), class: "btn btn-xs btn-secondary" %>
            <%= link_to 'Destroy', [:admin, photo], method: :delete, title: "Photo has a Print - delete product first.", data: { confirm: 'Are you sure?', toggle: "#{'tooltip' if photo.product.present?}" }, class: "#{'tooltip-disabled' if photo.product.present?} btn btn-xs btn-secondary destroy" %>
          </div>
          <% if photo.product.present? %>
            <%= link_to "View Print/Product", [:admin, photo.product], class: "btn btn-xs btn-secondary btn-bottom" %>
          <% else %>
            <%= link_to "Create Print", create_from_photo_admin_products_path(photo), method: :post, class: "btn btn-xs btn-secondary btn-bottom" %>
          <% end %>
        </td>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Add Photos', add_admin_photos_path, class: "btn btn-primary" %>
<div class="pagination">
  <%= paginate @photos %>
</div>