<%= form_for [:admin, @page_template] do |f| %>
  <div class='row'>

      <div class='col-xs-6'>
        <div class='form-group'>
          <%= f.label :title, "Title" %>
          <%= f.text_field :title, class: 'form-control' %>  
        </div>
      </div>
      <div class='col-xs-6'>
        <div class='form-group'>
          <%= f.label :page, "Page this template will appear on" %>
          <%= f.select :page, options_for_select(PageTemplate::AVAILABLE_PAGES), {}, {class: 'form-control'} %>
          <%= f.submit "Save", class: "btn btn-primary live-code-save" %>      
      </div>    
    </div>
  </div>
  
  <%= f.hidden_field :id %>

  
  <div class='row'>
    <div class='col-xs-12 col-md-6'>
      <%= f.label :body, "Template" %>
      <div id='ace-editor' class='live_code_editor'><%= @page_template.body %></div>
      <%= f.text_area :body, id: "ace-populate" %>
    </div>
   
 <% end %>
  

  <div class='col-xs-12 col-md-6'>
    <iframe id="live-code-frame" src="http://localhost:3000/admin/page_templates/live_render/<%= @page_template.id %>" width="100%" height="800">
      <p>Your browser does not support iframes.</p>
    </iframe>
  </div>
  </div>