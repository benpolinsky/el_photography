<div class="field form-group">
  <%= builder.label :using_inventory, "Use Inventory? "%>
  <%= builder.check_box :using_inventory, class: "form-control product_using_inventory" %>
  <p class='help-text'>If clicked, product will eventually run 'out-of-stock' and be unavailable.  If not, product will have infinite quantity.</p>
</div>

<div class="field quantity form-group">
  <%= builder.label :quantity %>
  <%= builder.number_field :quantity, {step: 1, class: "form-control quantity-input"} %>
</div>

<div class="field form-group">
  <%= builder.label :price, builder.object.price_label.html_safe %>
  <%= builder.number_field :price, {data: {parsley_required: 'true', parsley_error_message: "Price please."}, class: "form-control", step: '0.01', disabled: builder.object.price_disabled?} %>
</div>

<div class="field form-group">
  <%= builder.label :shipping_base %>
  <%= builder.number_field :shipping_base, {step: '0.01', class: "form-control", data: {parsley_required: 'true', parsley_error_message: "Please enter a base cost for shipping."}} %>
</div>

<div class="field form-group">
  <%= builder.label :additional_shipping_per_item %>
  <%= builder.number_field :additional_shipping_per_item, {step: '0.01', class: "form-control"} %>
</div>
