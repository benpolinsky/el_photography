<% breadcrumb :admin_product, @product %>
<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @product.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @product.description %>
</p>

<p>
  <strong>Price:</strong>
  <%= @product.price %>
</p>

<p>
  <strong>Quantity:</strong>
  <%= @product.quantity %>
</p>


<p>
  <strong>Photo:</strong>
  <%= image_tag @product.primary_image if @product.primary_image %>
</p>

<p>
  <strong>Shipping base:</strong>
  <%= @product.shipping_base %>
</p>



<p>
  <strong>Slug:</strong>
  <%= @product.slug %>
</p>

<p>
  <strong>International shipping base:</strong>
  <%= @product.international_shipping_base %>
</p>


<%= link_to 'Edit', edit_admin_product_path(@product) %> |
<%= link_to 'Back', admin_products_path %>
