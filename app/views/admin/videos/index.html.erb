<% breadcrumb :admin_videos %>
<p id="notice"><%= notice %></p>

<h1>Videos</h1>

<table class='table sortable table-responsive'>
  <thead>
    <tr>
      <th>move</th>
      <th>Caption</th>
      <th>Address</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @videos.each do |video| %>
      <%= content_tag :tr, class: 'row-item', data: {item_id: video.id, post_path: url_for([:update_row_order, :admin, :videos])} do %>
        <td class='handle'>&equiv;</td>
        <td><%= video.caption %></td>
        <td><%= video.address %></td>
        <td>
          <div class='btn-group btn-group-sm'>
            <%= link_to 'Show', [:admin, video], class: "btn btn-secondary" %>
            <%= link_to 'Edit', edit_admin_video_path(video), class: "btn btn-secondary" %>
            <%= link_to 'Destroy', [:admin, video], method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-secondary" %>
          </div>
        </td>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Video', new_admin_video_path, class: "btn btn-primary" %>
