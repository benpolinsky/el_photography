<h1>Welcome to The Spine Tingling Show</h1>


<div class='product-grid'>
<% @products.each do |product| %>
  <div class='product'>
    <%= image_tag product.primary_image if product.primary_image %>
    <div class='listing-quantity-container'> 
     <%= render :partial => 'display_product_quantity', locals: {product: product, cart: @cart} %>

    </div>
    
    <%= link_to product.name, product_path(product) %>
    <%= product.price.format %>
    <%= render :partial => 'add_to_cart', locals: {product: product, cart: @cart} %>
  </div>
<% end %>  
</div>
